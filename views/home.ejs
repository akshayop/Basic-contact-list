<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/4757ac8be3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>

    <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        My Contact List
    </h1>
    <div id="contact-list">
        <ul>
            <% for(let i of contact_list) { %>
                <li>
                    <div class = "details">
                        <p><%= i.name %></p>
                        <p><%= i.phoneNo %></p>
                    </div>

                    <div class="delete-btn">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>

    <form action="/create-contact" method="post">
        <input type="text" name="name" id="name" placeholder="Enter name " required>
        <input type="number" name="phoneNo" id="phoneNo" placeholder="Enter phone number" required>

        <button type="submit">Add to contact</button>
    </form>

    <script type="text/javascript" src="/js/home.js"></script>
    
</body>
</html>